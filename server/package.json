{
  "name": "react-admin-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "dev": "concurrently --kill-others 'npm run dev:hot' 'npm run dev:lint'",
    "dev:hot": "npm run clean:dev && node-hot",
    "dev:lint": "nodemon --watch src --watch .env src/app.ts --exec 'eslint src --cache'",
    "clean:dev": "rm -rf @dev && mkdir @dev",
    "clean:prod": "rm -rf dist && mkdir dist",
    "clean:prod:win": "rmdir /s /q dist && mkdir dist",
    "lint": "eslint src",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress ",
    "build": "npm run clean:prod && npm run lint && npm run build:webpack",
    "build:win": "npm run clean:prod:win && npm run lint && npm run build:webpack",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 delete ecosystem.config.js && pm2 start ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js --force --update-env",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "install:prod": "npm install --only=prod",
    "reinstall-module": "rm -rf node_modules && rm -f package-lock.json && npm i",
    "publish:development": "cd .. && npm run publish:development",
    "publish:staging": "cd .. && npm run publish:staging",
    "publish:production": "cd .. && npm run publish:production",
    "pub:dev": "cd .. && npm run pub:dev",
    "pub:staging": "cd .. && npm run pub:staging",
    "pub:prod": "cd .. && npm run pub:prod",
    "pub:all": "cd .. && npm run pub:all"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@pdg/util": "^1.0.23",
    "@types/cookie-parser": "^1.4.8",
    "@types/csurf": "^1.11.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/node": "^20.12.11",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "agentkeepalive": "^4.6.0",
    "axios": "^1.8.4",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.2",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "core-js": "^3.41.0",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "express-session": "^1.18.1",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "helmet": "^7.2.0",
    "http-proxy-middleware": "^3.0.5",
    "nocache": "^4.0.0",
    "node-hot-loader": "^1.21.11",
    "nodemon": "^3.1.9",
    "path": "^0.12.7",
    "prettier": "^3.5.3",
    "redis": "^4.7.0",
    "ts-loader": "^9.5.2",
    "typescript": "5.8.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  }
}
